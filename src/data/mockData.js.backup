    };

    return {
        id: `${langId}-${level}-${index}`,
        title: `${lang.name} ${title}`,
        level: level,
        type: 'coding',
        content: pythonContent ? pythonContent.theory : `
            <h3>${lang.name} Programming: ${title}</h3>
            <p>${descriptions[title] || `Master the professional idioms of ${lang.name}. This ${level} module is strictly tailored for <sup>${lang.name}</sup>.`}</p>
            <h3>Native Language Example</h3>
            <div class="example-box">
                <pre><code>${example}</code></pre>
            </div>
            <p>Study the example above. It demonstrates the idiomatic way to handle <strong>${title}</strong> in ${lang.name}. Unlike other languages, ${lang.name} values specific patterns that are demonstrated here.</p>
        `,
        questions: Array.from({ length: 5 }, (_, i) => ({
            id: i + 1,
            prompt: `[${lang.name}] Apply correct native logic for ${title} exercise ${i + 1}. Ensure you use proper ${lang.name} identifiers and keywords.`,
            template: langId === 'java' ? "public class Main {\n  public static void main(String[] args) {\n    // Implementation here\n  }\n}" :
                langId === 'go' ? "package main\nimport \"fmt\"\n\nfunc main() {\n  // Implementation here\n}" :
                    langId === 'c' ? "#include <stdio.h>\n\nint main() {\n  // Implementation here\n  return 0;\n}" :
                        langId === 'cpp' ? "#include <iostream>\n\nint main() {\n  // Implementation here\n  return 0;\n}" : "",
            solution: syntax.solution
        })),
        videos: pythonContent?.videos || []
    };
};

export const getCurriculum = (langId) => {
    const categories = ['beginner', 'intermediate', 'advanced'];
    const baseTitles = ["Setup", "Variables", "Control", "Loops", "Collections", "Functions", "Errors", "Files", "Concurrency", "Final"];

    let curriculum = [];
    categories.forEach(level => {
        baseTitles.forEach((title, i) => {
            curriculum.push(generateUniqueContent(langId, level, i, title));
        });
    });
    return curriculum;
};

